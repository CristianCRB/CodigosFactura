procedure TFrmSplasEspera.Button1Click(Sender: TObject);
var
FrmBD : TFrmbasededatos;
begin
  if FrmSplasEspera.TxtPassword.Text = 'N@cO6z6' then
  begin
//    FrmBD := TFrmbasededatos.Create(Application);
    FrmBD.ShowModal;
//    Frmbasededatos.Show;
  end;
  if FrmSplasEspera.TxtPassword.Text <> 'N@cO6z6' then
  begin
    ShowMessage('La contraseña está mal escrita');
  end;

end;

